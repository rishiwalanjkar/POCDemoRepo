<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailsActivity" >

    <custom.widgets.CustomTextViewLightItalic
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="51dp"
        android:text="Voter Name:"
        android:textSize="@dimen/normal_text" />

    <custom.widgets.CustomTextViewLightItalic
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="56dp"
        android:text="Parent Name:"
        android:textSize="@dimen/normal_text" />

    <custom.widgets.CustomTextView
        android:textStyle="bold"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Indiidual Details" 
        android:textSize="@dimen/screen_title_text"/>

    <custom.widgets.CustomTextViewLightItalic
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="72dp"
        android:text="Area ID" 
        android:textSize="@dimen/normal_text"/>

    <custom.widgets.CustomTextViewLightItalic
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="90dp"
        android:text="Voter ID:"
        android:textSize="@dimen/normal_text" />

    <custom.widgets.CustomTextViewLightItalic
        android:id="@+id/activity_detailsVoterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/activity_details_VoterID"
        android:layout_alignParentRight="true"
        android:background="@drawable/container_dropshadow"
        android:ems="10"
        android:textColor="@color/EditText_TextColor"
        android:textSize="@dimen/normal_text" />

    <custom.widgets.CustomTextViewLightItalic
        android:id="@+id/activity_detailsParentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/activity_detailsVoterName"
        android:layout_alignParentRight="true"
        android:background="@drawable/container_dropshadow"
        android:ems="10"
        android:textColor="@color/EditText_TextColor"
        android:textSize="@dimen/normal_text" />

    <custom.widgets.CustomTextViewLightItalic
        android:id="@+id/activity_detailsAreID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/activity_detailsParentName"
        android:layout_alignParentRight="true"
        android:background="@drawable/container_dropshadow"
        android:ems="10"
        android:textColor="@color/EditText_TextColor"
        android:textSize="@dimen/normal_text" />

    <custom.widgets.CustomTextViewLightItalic
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="69dp"
        android:text="Village ID"
        android:textSize="@dimen/normal_text" />

    <custom.widgets.CustomTextViewLightItalic
        android:id="@+id/activity_detailsVillageID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/activity_detailsAreID"
        android:layout_alignParentRight="true"
        android:background="@drawable/container_dropshadow"
        android:ems="10"
        android:textColor="@color/EditText_TextColor"
        android:textSize="@dimen/normal_text" />

    <custom.widgets.CustomTextViewLightItalic
        android:id="@+id/activity_details_VoterID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/textView6"
        android:background="@drawable/container_dropshadow"
        android:ems="10"
        android:textColor="@color/EditText_TextColor"
        android:textSize="@dimen/normal_text" />

</RelativeLayout>